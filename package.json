{
  "name": "d4d-express-api-boilerplate",
  "version": "1.0.0",
  "description": "A server side element to handle apis. Runs with SQL databases, Use TypeORM, JWT authentication, decorators & Custom seeders.",
  "type": "commonjs",
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.11",
    "@types/nodemailer": "^6.4.17",
    "@types/validator": "^13.7.14",
    "copyfiles": "^2.4.1",
    "cross-env": "^7.0.3",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "5.0.4"
  },
  "dependencies": {
    "@auth/express": "^0.8.0",
    "@sendgrid/mail": "^8.1.0",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "esbuild": "^0.24.0",
    "express": "^4.18.1",
    "express-rate-limit": "^6.7.0",
    "helmet": "^6.1.5",
    "hpp": "^0.2.3",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-simple": "^0.5.6",
    "morgan": "^1.10.0",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.2.4",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "nodemon": "^3.0.1",
    "path": "^0.12.7",
    "pg": "^8.11.3",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "typeorm": "^0.3.14",
    "validator": "^13.9.0",
    "winston": "^3.9.0",
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.2/xlsx-0.20.2.tgz"
  },
  "scripts": {
    "typeorm": "typeorm-ts-node-commonjs",
    "build": "rimraf build && node esbuild.config.ts && npm run copy-files",
    "dev": "nodemon src/app.bootstrap.ts",
    "prod": "node dist/app.bootstrap.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts",
    "dev:refresh": "npm run clean:all && npm install && npm run dev",
    "deploy": "node ./app.bootstrap.js",
    "type-check": "tsc --noEmit",
    "clean": "rimraf build",
    "clean:all": "rimraf build && rimraf node_modules",
    "copy-files": "copyfiles -u 0 ./package.json ./.env ./package-lock.json public/**/* build",
    "wipe": "ts-node src/scripts/run-wipe.script.ts",
    "seed": "ts-node src/scripts/run-seed-all.script.ts",
    "debug": "DEBUG=* node dist/app.bootstrap.js",
    "debug:dev": "DEBUG=* nodemon src/app.bootstrap.ts",
    "host:dev": "pm2 start npm --name=\"triskeloum-backend\" -- run dev",
    "seed:currencies": "ts-node src/scripts/run-seed-currencies.script.ts",
    "migration:create": "typeorm migration:create src/migrations/triskeloum-migration",
    "migration:generate": "typeorm migration:generate -d src/config/database.config.ts src/migrations/triskeloum-migration",
    "migration:up": "typeorm migration:run -d src/config/database.config.ts",
    "migration:down": "typeorm migration:revert -d src/config/database.config.ts",
    "generate-swagger": "node_modules/.bin/jsdoc2swagger -o swagger.json src/controllers/*.ts"
  }
}
